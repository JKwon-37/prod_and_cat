@model List<Product>

<p>
    <a asp-controller="Products" asp-action="ProductsPage">Products</a> | <a asp-controller="Categories" asp-action="CategoriesPage">Categories</a>
</p>

@{
    Product newProduct = new Product();
}
<partial name="ProductForm" model="@newProduct"/>

<h1>Existing Products</h1>

@foreach (Product product in Model)
{
    <a
    asp-controller="Products"
    asp-action="ProductDetails"
    asp-route-productId="@product.ProductId"
    >@product.Name</a>
}