@model Product

<h1>New Products</h1>

<form asp-controller="Products" asp-action="CreateProduct">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span class="val" asp-validation-for="Name"></span>
        <input asp-for="Name" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span class="val" asp-validation-for="Description"></span>
        <input asp-for="Description" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <span class="val" asp-validation-for="Price"></span>
        <input asp-for="Price" type="text"/>
    </div>
    <input class="btn-primary" type="submit" value="Create">
</form>